# Backend Environment Variables
APP_NAME=Radar Visualization
BASE_URL=http://localhost:8000
FRONTEND_ORIGINS=["http://localhost:3000","http://localhost"]

# Directories (absolute paths in Docker, relative in local development)
UPLOAD_DIR=/app/app/storage/uploads
DATA_DIR=/app/app/storage/data
IMAGES_DIR=app/storage/tmp

# Upload rules
MAX_UPLOAD_MB=500
ALLOWED_EXTENSIONS=[".nc"]

# Products
ALLOWED_PRODUCTS=["PPI","RHI","CAPPI","COLMAX"]

# GDAL Performance Settings (optimized for COG tile serving)
GDAL_CACHEMAX=512
GDAL_NUM_THREADS=ALL_CPUS
VSI_CACHE=TRUE
VSI_CACHE_SIZE=262144000
GDAL_DISABLE_READDIR_ON_OPEN=EMPTY_DIR
GDAL_MAX_DATASET_POOL_SIZE=450
GDAL_FORCE_CACHING=YES
PROJ_NETWORK=OFF
